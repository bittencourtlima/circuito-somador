<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CircuitActivity">

    <EditText
            android:id="@+id/inputBit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Informe 4 bits" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/outputBit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="output"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/inputBit1" app:layout_constraintEnd_toEndOf="@+id/inputBit1"
            app:layout_constraintStart_toStartOf="@+id/inputBit1" android:layout_marginTop="8dp"/>

    <EditText
            android:id="@+id/inputBit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Informe 4 bits" app:layout_constraintTop_toBottomOf="@+id/outputBit1"
            app:layout_constraintEnd_toEndOf="@+id/inputBit1"
            app:layout_constraintStart_toStartOf="@+id/inputBit1" android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/outputBit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="output"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/inputBit2" app:layout_constraintEnd_toEndOf="@+id/inputBit2"
            app:layout_constraintStart_toStartOf="@+id/inputBit2" android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/convert"
            app:layout_constraintTop_toBottomOf="@+id/outputBit2" app:layout_constraintEnd_toEndOf="@+id/inputBit2"
            app:layout_constraintStart_toStartOf="@+id/inputBit2" android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SaÃ­das:"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/convert" app:layout_constraintEnd_toEndOf="@+id/inputBit2"
            app:layout_constraintStart_toStartOf="@+id/inputBit2" android:layout_marginTop="24dp"/>

    <TextView
            android:id="@+id/outputSomaBinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="output"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/exit" app:layout_constraintEnd_toEndOf="@+id/inputBit2"
            app:layout_constraintStart_toStartOf="@+id/inputBit2" android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/outputSomaDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="output"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/outputSomaBinary" app:layout_constraintEnd_toEndOf="@+id/inputBit2"
            app:layout_constraintStart_toStartOf="@+id/inputBit2" android:layout_marginTop="8dp"/>



</android.support.constraint.ConstraintLayout>